<div id="text-section" class="content-section">
    <div class="text-and-image">
        <div class="text-content">
            <h1><%= @case.title %></h1>
            <div>
                <p><%= sanitize @case.text, tags: %w(p strong em a ul ol li) %></p>
            </div>
        </div>
        <div class="image-content">
            <% if @case.main_image.attached? %>
                <%= image_tag url_for(@case.main_image), alt: @case.title %>
            <% end %>
        </div>
    </div>
</div>

<style>
    .content-section {
        margin: 20px;
    }
    .text-and-image {
        display: flex;
        flex-direction: row;
        justify-content: flex-start;
        align-items: flex-start;
    }
    .text-content {
        flex: 1;
        margin-right: 20px;
    }
    .text-content h1 {
        font-size: 2rem;
        margin-bottom: 10px;
    }
    .text-content p {
        font-size: 1.2rem;
    }
    .image-content {
        flex: 0 0 200px;
    }
    .image-content img {
        width: 100%;
        height: auto;
        max-width: 200px;
        object-fit: cover;
    }
    @media (max-width: 600px) {
        .text-and-image {
            flex-direction: column;
            align-items: center;
        }
        .text-content {
            margin-right: 0; 
            margin-bottom: 20px;
            text-align: center;
        }
        .image-content {
            flex: 0 0 auto;
        }
    }
</style>
